[push]
  default = simple
[color]
  ui = true
[credential]
  helper = cache --timeout=3600
[grep]
  linenumber = true
  extendregexp = true
[core]
  autocrlf = input
[status]
  branch = true
  submodulesummary = true
#  short = true
[alias]
  g = grep --break --heading --line-number
  s = status
# suggested by numpy https://docs.scipy.org/doc/numpy/dev/gitwash/configure_git.html#configure-git
[merge]
  log = true
[diff]
  submodule = log
[fetch]
	prune = true
