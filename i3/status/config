general {
  output_format = "i3bar"
  colors = true
  interval = 1
}

order += "ipv6"
# order += "wireless _first_"
order += "ethernet _first_"
# order += "battery all"
order += "load"
order += "memory"
order += "disk /"
order += "tztime local"

# wireless _first_ {
#         format_up = "W: (%quality at %essid) %ip"
#         format_down = "W: down"
# }

ethernet _first_ {
  format_up = "%ip (%speed)"
  format_down = "Ethernet down"
}

# battery all {
#         format = "%status %percentage %remaining"
# }

load {
  format = "CPU: %1min"
}

disk "/" {
  format = "HD: %avail"
  low_threshold = "2"
}

memory {
  format = "MEM: %free"
  threshold_degraded = "10%"
  threshold_critical = "5%"
  # format_degraded = "MEM: %free"
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}
